<div>
  
  <div class="card" style="width: 30rem;"
    data-model_name="<%= Shukan.model_name.singular %>"
    data-id="<%= shukan.id %>"
  >
    
    <ul class="list-group list-group-flush">
      
      <li class="list-group-item">
          <%# 完了のときは取り消し線を表示し、そうでない場合はそのまま表示 %>
          <%= shukan.done ? tag.del(){shukan.title} : (shukan.title) %>
        <div class="text-right position-absolute" style="top: 4px; right: 4px">
          <div class="btn-group">
            <button type="button" class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-ellipsis-v align-middle"></i>
            </button>
            <div class="dropdown-menu dropdown-menu-right text-middle">
              <%= form_with(model: shukan, remote: true) do |form| %>
                <% if shukan.done %>
                  <%= form.hidden_field :done, value: false, readonly: true %>
                  <%= form.submit "Undone", class: "dropdown-item text-success" %>
                <% else %>
                  <%= form.hidden_field :done, value: true, readonly: true %>
                  <%= form.submit "Done!", class: "dropdown-item text-success" %>
                <% end %>
              <% end %>              
              <div class="dropdown-divider"></div>
              <%= link_to "Edit", edit_shukan_path(shukan), class: "dropdown-item", remote: true %>
              <%= link_to "Delete", shukan, method: :delete, class: "dropdown-item text-danger", remote: true, data: { confirm: 'Are you sure?' } %>
              
            </div>
          </div>
        </div>           
      </li>
    </ul>
  </div>
</div>

