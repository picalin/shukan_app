// モーダルを閉じる処理
$("#shukanModal").modal("hide");
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();


// Rails @status => true 画面の書き換え : false モーダルを再度表示
<% if @status %>
$('[data-model_name="shukan"]').filter('[data-id="<%= @shukan.id %>"]').replaceWith("<%= j(render @shukan) %>");

<% else %>
$("#modalArea").html("<%= j(render 'form', shukan: @shukan) %>")
$("#modalArea").find(".modal").modal('show')
<% end %>