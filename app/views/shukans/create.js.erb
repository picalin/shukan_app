// modalを閉じる処理
$("#shukanModal").modal("hide");
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();


// Rails @status => true 画面の書き換え : false モーダルを再度表示
<% if @status %>
$("#shukansIndex").append("<%= j(render @shukan) %>");

<% else %>
$("#modalArea").html("<%= j(render 'shukans/form', shukan: @shukan) %>")
$("#modalArea").find(".modal").modal('show')
<% end %>