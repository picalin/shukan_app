<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h3 class="mt-3 mb-3">ログイン</h3>

      <hr>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= 
            # f.email_fieldは使わず、 text_fieldを使用
            f.text_field :nickname,
            # shukan-login-inputに変更しています
            class: "form-control #{"is-invalid" if alert} shukan-login-input",
            autofocus: "true",
            required: "required",
            placeholder: "ニックネーム"
          %>
          
          <% if alert %>
          <span class="shukan-error-message">
            <strong>ニックネームが正しくない可能性があります。</strong>
          </span>
          <% end %>
        </div>

        <div class="form-group">
          <%= 
            f.password_field :password,
            class: "form-control #{"is-invalid" if alert } shukan-login-input",
            autofocus: "true",
            required: "required",
            placeholder: "パスワード"
          %>

          <% if alert %>
          <span class="shukan-error-message">
            <strong>パスワードが正しくない可能性があります。</strong>
          </span>
          <% end %>
        </div>

        <div class="form-group">
          <div class="form-check">
            <%=  f.check_box :remember_me, class: "form-check-input" %>
            <%=  f.label :remember_me, "次回から自動的にログインする", class: "form-check-label shukan-check-label w-100" %>
          </div>
        </div>

        <div class="form-group">
          <%=  f.submit "ログイン", class: "mt-3 btn shukan-submit-button w-100" %>
        </div>

        <%= link_to "パスワードをお忘れの場合", new_user_password_path %>
        <% end %>
      
      <hr>

      <div class="form-group">
        <%= link_to "新規登録", new_user_registration_path, class: "btn btn-link mt-3 d-flex justify-content-center shukan-login-text" %>
      </div>
    </div>
  </div>
</div>
